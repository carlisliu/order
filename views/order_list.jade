extends layout
append css
    !{context.resources.css.order_list}
    //link(rel='stylesheet', href='#{context.staticUrl}/stylesheets/datepicker.css')
    style.
        table a, a:hover {
            text-decoration: none;
        }
block content
    div.content
        div.row-fluid
            div.span12
                div.box
                    div.box-head
                        h3='Search Condition'
                    div.box-content
                        form.validate(action='#', id='customer-form')
                            div.row-fluid.force-margin
                                div.span3
                                    div.control-group
                                        label.control-label(for='order-customer') Customer
                                        div.controls
                                            select.required(id='order-customer', name='order-customer')
                                                option(value='') Choose one
                                div.span3
                                    div.control-group
                                        label.control-label(for='order-date') Date
                                        div.controls
                                            input.required(type='text',name='order-date',id='order-date')
                                div.span3
                                    div.control-group
                                        label.control-label(for='order-no') Order No.
                                        div.controls
                                            input.required(type='text',name='order-no',id='order-no')
                                div.span3(style='margin-top:15px;')
                                    button.btn.btn-large.btn-round(id='order-search') Search
        div.row-fluid
            div.span12
                div.box
                    div.box-head.tabs
                        h3='All Products'
                    div.box-content.box-nomargin
                        div.tab-content
                            div.tab-pane.active
                                table.table.table-striped.dataTable.table-bordered(id='order-detail-holder')
                                    thead
                                        tr
                                            th Order No.
                                            th Date
                                            th Customer
                                            th Customer Tel
                                            th Total Price(ï¿¡)
                                    tbody
                                        each item in orders
                                            tr
                                                td
                                                    a(href='#', data-order-no='#{item.no}') #{item.no}
                                                td #{item.order_date}
                                                td #{item.customer_name}
                                                td #{item.customer_tel}
                                                td #{item.total}
block scriptContent
    script(type='x/template', id='order-result-template').
        <tr>
            <td>
                <a href="#" data-order-no="{no}">{no}</a>
            </td>
            <td>{order_date}</td>
            <td>{customer_name}</td>
            <td>{customer_tel}</td>
            <td>{total}</td>
        </tr>
    script.
        seajs.use(['jquery', 'static/order/list']);