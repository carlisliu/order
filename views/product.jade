extends layout
append css
    link(rel='stylesheet', href='/stylesheets/jquery.jgrowl.css')
block content
    div.content
        div.row-fluid
            div.span12
                div.box
                    div.box-head
                        h3='Add Product'
                    div.box-content
                        form.validate.form-horizontal(action='#', id='product-form')
                            div.control-group
                                label.control-label(for='product-name') Name
                                div.controls
                                    input.required(type='text',name='product-name',id='product-name')
                            div.control-group
                                label.control-label(for='product-category') Category
                                div.controls
                                    select.required(id='product-category', name='product-category')
                                        option(value='') Choose one
                                        each categoryItem, index in category
                                            option(value='#{categoryItem.id}') #{categoryItem.name}
                            div.control-group
                                label.control-label(for='product-price') Price
                                div.controls
                                    input.required(type='text',name='product-price',id='product-price')
                            div.control-group
                                label.control-label(for='product-memo') Memo
                                div.controls
                                    input.span6(type='text',name='product-memo',id='product-memo')
                            div.form-actions
                                input.btn.btn-primary(type='submit', value='Save', id='save-category')
                                input.btn.btn-danger(type='reset',style='margin-left:3px;')
        div.row-fluid
            div.span12
                div.box
                    div.box-head.tabs
                        h3='All Products'
                    div.box-content.box-nomargin
                        div.tab-content
                            div.tab-pane.active
                                table.table.table-striped.dataTable.table-bordered(id='customers-holder')
                                    thead
                                        tr
                                            th Name
                                            th Price
                                            th Memo
                                            th Action
                                    each productItem, productIndex in product
                                        tr(data-product-id="#{productItem.id}")
                                            td(data-product-name="") #{productItem.name}
                                            td(data-product-price="") #{productItem.price}
                                            td(data-product-memo="") #{productItem.memo}
                                            td.actions
                                                div.btn-group
                                                    a.btn.btn-mini.tip.deleteRow(href='#', data-original-title='Remove', title='Remove')
                                                        img(src='/images/icons/fugue/cross.png', alt='')
                            div.dataTables_info Showing 1 to 10 of 58 entries
                            div.dataTables_paginate.paging_bootstrap.pagination
                                ul
                                    li.prev.disabled
                                        a(href='#') &lt;Previous
                                    li.active
                                        a(href='#') 1
                                    li
                                        a(href='#') 2
                                    li
                                        a(href='#') 3
                                    li
                                        a(href='#') 4
                                    li.next
                                        a(href='#') Next&gt;
block scriptContent
    script(type='x/template', id='customer-row-template').
        <tr data-category-id="{id}">
            <td data-category-name="{name}">{name}</td>
            <td data-categoryr-memo="{memo}">{tel}</td>
            <td class="actions">
                <div class="btn-group">
                    <a href="javascript:void(0);" class="btn btn-mini tip">
                        <img src="/images/icons/fugue/gear.png" alt=""/>
                    </a>
                    <a href="javascript:void(0);" class="btn btn-mini tip deleteRow">
                        <img src="/images/icons/fugue/cross.png" alt=""/>
                    </a>
                </div>
            </td>
        </tr>
    script.
        (function(){
            window.msg = '#{msg}';
            seajs.config({
                base: '/javascripts/sea-modules/',
                alias: {
                    'jquery': 'jquery/jquery/1.10.1/jquery.js',
                    'validate': 'jquery/validate/1.13.1/jquery.validate.js',
                    'jgrowl': 'jquery/jgrowl/1.4.2/jquery.jgrowl.js',
                    'utils': '/javascripts/static/utils/index.js'
                }
            });
            seajs.use(['jquery', '/javascripts/static/product/event']);
        })();