extends layout
append css
    link(rel='stylesheet', href='/stylesheets/jquery.jgrowl.css')
block content
    div.content
        div.row-fluid
            div.span12
                div.box
                    div.box-head
                        h3='Add Product'
                    div.box-content
                        form.validate.form-horizontal(action='#', id='product-form')
                            div.control-group
                                label.control-label(for='product-name') Name
                                div.controls
                                    input.required(type='text',name='product-name',id='product-name')
                            div.control-group
                                label.control-label(for='product-category') Category
                                div.controls
                                    select.required(id='product-category', name='product-category')
                                        option(value='') Choose one
                                        each categoryItem, index in category
                                            option(value='#{categoryItem.id}') #{categoryItem.name}
                            div.control-group
                                label.control-label(for='product-price') Price
                                div.controls
                                    input.required.price(type='text',name='product-price',id='product-price')
                            div.control-group
                                label.control-label(for='product-memo') Memo
                                div.controls
                                    input.span6(type='text',name='product-memo',id='product-memo')
                            div.form-actions
                                input.btn.btn-primary(type='submit', value='Save', id='save-product')
                                input.btn.btn-danger(type='reset',style='margin-left:3px;')
        div.row-fluid
            div.span12
                div.box
                    div.box-head.tabs
                        h3='All Products'
                    div.box-content.box-nomargin
                        div.tab-content
                            div.tab-pane.active
                                table.table.table-striped.dataTable.table-bordered(id='products-holder')
                                    thead
                                        tr
                                            th Name
                                            th Category
                                            th Price(￡)
                                            th Memo
                                            th Action
                                    each productItem, productIndex in product
                                        tr(data-product-id="#{productItem.id}")
                                            td(data-product-name="#{productItem.name}") #{productItem.name}
                                            td(data-product-category="#{productItem.category_id}") #{productItem.category_name}
                                            td(data-product-price="#{productItem.price}") #{productItem.price}
                                            td(data-product-memo="#{productItem.memo}") #{productItem.memo}
                                            td.actions
                                                div.btn-group
                                                    a.btn.btn-mini.tip(href='#info-modal',data-toggle='modal', data-original-title='Change Info', title='Change Info')
                                                        img(src='/images/icons/fugue/gear.png', alt='')
                                                    a.btn.btn-mini.tip.deleteRow(href='#info-modal',data-toggle='modal', data-original-title='Remove', title='Remove')
                                                        img(src='/images/icons/fugue/cross.png', alt='')
                            div.dataTables_info(style='display:none;') Showing 1 to 10 of 58 entries
                            div.dataTables_paginate.paging_bootstrap.pagination(style='display:none;')
                                ul
                                    li.prev.disabled
                                        a(href='#') &lt;Previous
                                    li.active
                                        a(href='#') 1
                                    li
                                        a(href='#') 2
                                    li.next
                                        a(href='#') Next&gt;
                            div.modal.hide(id='info-modal')
                                div.modal-header
                                    button.close(data-dismiss='modal', type='button') ×
                                    h3='Change Product Info'
                                div.modal-body
                                div.modal-footer
                                    a.btn(data-dismiss='modal', href='#') Close
                                    a.btn.btn-primary(data-dismiss='modal', href='#') Confirm
block scriptContent
    script(type='x/template', id='product-row-template').
        <tr data-product-id="{id}">
            <td data-product-name="{name}">{name}</td>
            <td data-product-category="{category_id}">{category_name}</td>
            <td data-product-price="{price}">{price}</td>
            <td data-product-memo="{memo}">{memo}</td>
            <td class="actions">
                <div class="btn-group">
                    <a href="javascript:void(0);" class="btn btn-mini tip">
                        <img src="/images/icons/fugue/gear.png" alt=""/>
                    </a>
                    <a href="javascript:void(0);" class="btn btn-mini tip deleteRow">
                        <img src="/images/icons/fugue/cross.png" alt=""/>
                    </a>
                </div>
            </td>
        </tr>
    script(type='x/template', id='product-form-template').
        <div class="modal-body">
            <form class="validate form-horizontal" action="#" id="category-change-form">
                <div class="control-group">
                    <label class="control-label" for="product-name">Name</label>
                    <div class="controls">
                        <input class="required" type="text" name="product-name" id="product-name" value="{name}"/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="product-category">Category</label>
                    <div class="controls">
                        <select class="required" id="product-category" name="product-category">
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="product-price">Price</label>
                    <div class="controls">
                        <input class="required price" type="text" name="product-price" id="product-price" value="{price}"/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="product-memo">Memo</label>
                    <div class="controls">
                        <input type="text" name="product-memo" id="product-memo" value="{memo}"/>
                    </div>
                </div>
            </form>
        </div>
    - var categoryHtml = JSON.stringify(categoryData);
    script(type='x/data-category', id="category-data").
        !{categoryHtml}
    script.
        (function(){
            window.msg = '#{msg}';
            seajs.use(['jquery', 'static/product/event']);
        })();