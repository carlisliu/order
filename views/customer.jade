extends layout
append css
    link(rel='stylesheet', href='/stylesheets/jquery.jgrowl.css')
block content
    div.content
        div.row-fluid
            div.span12
                div.box
                    div.box-head
                        h3='Add Customer'
                    div.box-content
                        form.validate.form-horizontal(action='#', id='customer-form')
                            div.control-group
                                label.control-label(for='customer-name') Name
                                div.controls
                                    input.required(type='text',name='customer-name',id='customer-name')
                            div.control-group
                                label.control-label(for='customer-tel') Tel
                                div.controls
                                    input.required(type='text',name='customer-tel',id='customer-tel')
                            div.control-group
                                label.control-label(for='customer-addr-street') Address-Street
                                div.controls
                                    input.required.span6(type='text',name='customer-addr-street',id='customer-addr-street')
                            div.control-group
                                label.control-label(for='customer-addr-city') Address-City
                                div.controls
                                    input.required(type='text',name='customer-addr-city',id='customer-addr-city')
                            div.control-group
                                label.control-label(for='customer-addr-country') Address-Country
                                div.controls
                                    input(type='text',name='customer-addr-country',id='customer-addr-country')
                            //div.control-group
                            //    label.control-label(for='sela') Select
                            //    div.controls
                            //        select(class='{required:true}', id='sela', name='sela')
                            //            option(value='Choose one') Choose one
                            //            option(value='1') Option 1
                            //            option(value='2') Option 2
                            //            option(value='3') Option 3
                            //            option(value='4') Option 4
                            div.form-actions
                                input.btn.btn-primary(type='submit', value='Save', id='save-customer')
                                input.btn.btn-danger(type='reset',style='margin-left:3px;')
        div.row-fluid
            div.span12
                div.box
                    div.box-head.tabs
                        h3='All Customers'
                    div.box-content.box-nomargin
                        div.tab-content
                            div.tab-pane.active(id='customers-holder')
                                table.table.table-striped.dataTable.table-bordered
                                    thead
                                        tr
                                            th Name
                                            th Tel
                                            th Address
                                            th Action
                                    tbody
                                        tr(data-customer-id="gred")
                                            td Carlis Liu
                                            td 18201027282
                                            td No2. DL Street, Haidian Distract, Beijing City, China
                                            td.actions
                                                div.btn-group
                                                    a.btn.btn-mini.tip(href='#', data-original-title='Change Info', title='Change Info')
                                                        img(src='/images/icons/fugue/gear.png', alt='')
                                                    a.btn.btn-mini.tip.deleteRow(href='#', data-original-title='Remove', title='Remove')
                                                        img(src='/images/icons/fugue/cross.png', alt='')
                            div.dataTables_info Showing 1 to 10 of 58 entries
                            div.dataTables_paginate.paging_bootstrap.pagination
                                ul
                                    li.prev.disabled
                                        a(href='#') &lt;Previous
                                    li.active
                                        a(href='#') 1
                                    li
                                        a(href='#') 2
                                    li
                                        a(href='#') 3
                                    li
                                        a(href='#') 4
                                    li.next
                                        a(href='#') Next&gt;

block scriptContent
    script(type='x/template', id='customer-row-template').
        <tr data-customer-id="{id}">
            <td data-customer-name="{name}">{name}</td>
            <td data-customer-tel="{tel}">{tel}</td>
            <td data-customer-address="{address}">{Address}</td>
            <td class="actions">
                <div class="btn-group">
                    <a href="javascript:void(0);" class="btn btn-mini tip">
                        <img src="/images/icons/fugue/gear.png" alt=""/>
                    </a>
                    <a href="javascript:void(0);" class="btn btn-mini tip deleteRow">
                        <img src="/images/icons/fugue/cross.png" alt=""/>
                    </a>
                </div>
            </td>
        </tr>
    script.
        (function(){
            seajs.config({
                base: '/javascripts/sea-modules/',
                alias: {
                    'jquery': 'jquery/jquery/1.10.1/jquery.js',
                    'validate': 'jquery/validate/1.13.1/jquery.validate.js',
                    'jgrowl': 'jquery/jgrowl/1.4.2/jquery.jgrowl.js'
                }
            });
            seajs.use(['jquery', '/javascripts/static/customer/event']);
        })();